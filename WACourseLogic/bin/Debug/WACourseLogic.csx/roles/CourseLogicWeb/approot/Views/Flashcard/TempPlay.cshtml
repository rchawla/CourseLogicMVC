    function GetRootPathJS() {
        var url = document.location.toString(); //url
        var e_url = ''; //edited url
        var p = 0; //position
        var p2 = 0; //position 2
        p = url.indexOf("//");
        e_url = url.substring(p + 2);
        p2 = e_url.indexOf("/");
        var root_url = url.substring(0, p + p2 + 3);
        return root_url;
    }

